{
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"],
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
  "compilerOptions": {
    "baseUrl": "./app",
    "paths": {
      "*": ["./*", "app/*", "../node_modules/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "importHelpers": true,
    "strict": false,
    "checkJs": false
  },
  "extends": "./tsconfig.base.json"
}
